<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/notice_item_icon_example"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp">
            <LinearLayout
                android:id="@+id/llDepartment"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作状态:"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/case_status"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处理中"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_above="@+id/llDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类      型："
                    android:textSize="16sp"
                    android:layout_marginBottom="2dp"
                    android:layout_above="@+id/department"/>
                <TextView
                    android:id="@+id/case_type"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="校园环境"
                    android:textSize="16sp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/case_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第xxx号案卷"
                android:textSize="20sp"
                android:textColor="@color/infoBlueColor"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/case_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="2017-04-03"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>